{
    "extends": "tsconfig/default.json",
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true
    }
}