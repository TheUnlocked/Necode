{
  "name": "tmpaley-mqp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "necode:build": "cross-env NODE_ENV=production turbo run build",
    "ssl-proxy": "npx local-ssl-proxy --source 3010 --target 3000 --key .dev-ssl-certs/localhost-key.pem --cert .dev-ssl-certs/localhost.pem",
    "server:build": "cross-env NODE_ENV=production webpack --config ./websocketServer/webpack.config.js",
    "start": "cross-env NODE_ENV=production node run-production.js",
    "validate": "run-p lint typecheck",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noemit",
    "test": "mocha",
    "vercel-build": "prisma generate && prisma migrate deploy && next build"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "ts-node --transpile-only packages/database/src/seed.ts"
  },
  "devDependencies": {
    "turbo": "^1.7.0"
  }
}
