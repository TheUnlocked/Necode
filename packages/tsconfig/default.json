{
    "display": "Default",
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "~backend/*": ["../../packages/backend/src/*"],
            "~ui/*": ["../../packages/ui/src/*"],
            "~api/*": ["../../packages/api/src/*"],
            "~shared/*": ["../../packages/shared/src/*"],
            "~utils/*": ["../../packages/utils/src/*"],
            
            "@necode-org/*": ["../../packages/*/src"],
            "~*": ["../../packages/*/src"]
        },
    },
}