// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  refresh_token_expires_in Int?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  oauth_token_secret       String?
  oauth_token              String?
  ext_expires_in           Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum SitewideRights {
  None
  Faculty
  Admin
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username      String                @unique
  displayName   String
  email         String                @unique
  firstName     String
  lastName      String
  rights        SitewideRights        @default(None)
  emailVerified DateTime? // Required for NextAuth.js, but never used
  simulatedBy   User?     @relation(name: "simulation", fields: [simulatedById], references: [id], onDelete: Cascade)
  simulatedById String?
  ownsSimulated User[]    @relation(name: "simulation")
  accounts      Account[]
  sessions      Session[]
  classes       ClassroomMembership[]
  submissions   ActivitySubmission[]
}

model Classroom {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  displayName  String
  members      ClassroomMembership[]
  lessons      Lesson[]
  liveActivity LiveActivity?
  joinCode     JoinCode?
}

model JoinCode {
  code        String    @unique @db.VarChar(6)
  classroom   Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  classroomId String    @id
}

enum ClassroomRole {
  Student
  Instructor
}

model ClassroomMembership {
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  classroom   Classroom     @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  classroomId String
  role        ClassroomRole @default(Student)

  @@id([userId, classroomId])
}

model Activity {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  // updatedAt excluded because of order field

  activityType     String
  lesson           Lesson               @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId         String
  displayName      String
  configuration    Json?
  enabledLanguages String[]
  order            Int
  submissions      ActivitySubmission[]
  liveInstances    LiveActivity[]
}

model Lesson {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  displayName String
  classroom   Classroom  @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  classroomId String
  date        DateTime   @db.Date
  activities  Activity[]
}

model LiveActivity {
  classroomId String    @unique
  activityId  String
  data        Json?
  activity    Activity  @relation(fields: [activityId], references: [id], onDelete: Cascade)
  classroom   Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)

  @@id([classroomId, activityId])
}

model ActivitySubmission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activityId String
  userId     String
  version    Int
  data       Json?
  activity   Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([activityId, userId, version])
}
