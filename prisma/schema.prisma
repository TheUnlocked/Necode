model User {
  id          Int         @id @default(autoincrement())
  authId      String      @unique
  displayName String
  email       String
  firstName   String
  lastName    String
  createdAt   DateTime    @default(now()) @db.Timestamp(6)
  instructs   Classroom[] @relation("instructs")
  classes     Classroom[] @relation("attends")
}

model Classroom {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  displayName  String
  createdAt    DateTime @default(now()) @db.Timestamp(6)
  instructor   User     @relation("instructs", fields: [instructorId], references: [id])
  instructorId Int
  students     User[]   @relation("attends")
}

model Activity {
  id             Int           @id @default(autoincrement())
  activityType   String
  lesson         Lesson @relation(fields: [lessonId], references: [id])
  lessonId       Int
  displayName    String
  order          Int
  clonedFrom     Activity[] @relation("cloned", fields: [clonedFromId], references: [id])
  clonedFromId   Int
  clonedBy       Activity[] @relation("cloned")
  configuration  Json
  interactionMode String
  transientData  Json
}

model Lesson {
  id            Int           @id @default(autoincrement())
  displayName   String
  activities    Activity[]
}