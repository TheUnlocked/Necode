{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "globalEnv": [
        "NODE_ENV"
    ],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**"]
        },
        "db:migrate:deploy": {},
        "db:push": {
            "cache": false
        },
        "db:seed": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "generate": {
            "dependsOn": ["^generate"],
            "cache": false
        },
        "lint": {}
    }
}