{
    "include": ["../**/*.ts"],
    "exclude": ["../node_modules/**"],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true
    }
}